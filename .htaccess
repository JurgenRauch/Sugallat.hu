RewriteEngine On

# ===== SEO-PRESERVING REDIRECTS FROM OLD PHP SITE =====

# Exact matches - redirect to renamed files
RewriteCond %{QUERY_STRING} ^f=bemutatkozas$
RewriteRule ^index\.php$ /bemutatkozas.html? [R=301,L]

RewriteCond %{QUERY_STRING} ^f=tevekenysegeink$
RewriteRule ^index\.php$ /tevekenysegeink.html? [R=301,L]

RewriteCond %{QUERY_STRING} ^f=hasznos_linkek$
RewriteRule ^index\.php$ /hasznos-linkek.html? [R=301,L]

# Direct matches - redirect to existing files
RewriteCond %{QUERY_STRING} ^f=elerhetoseg$
RewriteRule ^index\.php$ /kapcsolat.html? [R=301,L]

RewriteCond %{QUERY_STRING} ^f=referenciak$
RewriteRule ^index\.php$ /referenciak.html? [R=301,L]

RewriteCond %{QUERY_STRING} ^f=arak$
RewriteRule ^index\.php$ /arak.html? [R=301,L]

# Missing pages - redirect to most relevant existing pages
RewriteCond %{QUERY_STRING} ^f=munkatarsaink$
RewriteRule ^index\.php$ /bemutatkozas.html? [R=301,L]

RewriteCond %{QUERY_STRING} ^f=uzletpolitikank$
RewriteRule ^index\.php$ /bemutatkozas.html? [R=301,L]

RewriteCond %{QUERY_STRING} ^f=letoltheto_dokumentumok$
RewriteRule ^index\.php$ /tevekenysegeink.html? [R=301,L]

RewriteCond %{QUERY_STRING} ^f=partner_cegek$
RewriteRule ^index\.php$ /bemutatkozas.html? [R=301,L]

# English version redirect
RewriteRule ^index_en\.php$ /pages/en/index.html [R=301,L]

# Main index.php redirect to homepage
RewriteRule ^index\.php$ / [R=301,L]

